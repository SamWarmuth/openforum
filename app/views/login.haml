!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %link{:href => "css/style.css", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    %script{:src => "js/jquery-1.4.2.min.js", :type => "text/javascript"}
    %script{:src => "js/jquery-ui-1.8.7.custom.min.js", :type => "text/javascript"}
    %title Open Forum Login
  %body{:style => "background-color: #eee"}
    #login-wrapper
      .box-header.login
        Log into the Open Forum
      .box
        -if params[:error] && params[:error] == "incorrect"
          .notification.error
            %span.strong Error:
            Email or password incorrect.
        -if params[:success] && params[:success] == "created"
          .notification.success
            %span.strong Success!
            Your account has been created. Please log in.
        %form.login{:action => "/login", :method => "post"}
          .row
            %label.label Email
            %input.input{:type => "text", :name => "email"}
          .row
            %label.label Password
            %input.input{:type => "password", :name => "password"}
          .row{:style => "text-align: right; margin-right: 45px; margin-bottom: 25px"}
            %input#rememberme.checkbox{:checked => "checked", :type => "checkbox"}
            %label.checkbox.tl.strong{:for => "rememberme", :style => "width: 150px"} Remember me
          .row
            %input.awesome.black.large{:style => "width: 150px", :type => "submit", :value => "Login"}
          %br
            
    .colored-box.blue{:style => "text-align: center; font-size: 1.3em; width: 400px; margin: auto"}
      %a.name{:href => "/signup", :style => "display: block"} Create a New Account
