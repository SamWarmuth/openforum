!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %link{:href => "css/style.css", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    %script{:src => "js/jquery-1.4.2.min.js", :type => "text/javascript"}
    %script{:src => "js/jquery-ui-1.8.7.custom.min.js", :type => "text/javascript"}
    %title Open Forum - Sign Up
  %body{:style => "background-color: #eee"}
    #login-wrapper
      .return-to-login{:style => "float: right; font-size: 0.75em; margin-right: 20px; margin-top: 10px"}
        %a{:href => "/login"} Back To Login
      .box-header.login
        Sign up for the Open Forum
      .box
        -if params[:error]
          -if params[:error] == "email"
            .notification.error
              %span.strong Error:
              User with this email already exists.
          -if params[:error] == "name"
            .notification.error
              %span.strong Error:
              User with this name already exists.
          -if params[:error] == "password"
            .notification.error
              %span.strong Error:
              Passwords didn't match.
          -if params[:error] == "empty"
            .notification.error
              %span.strong Error:
              Please fill in all fields
        %form.login{:action => "/signup", :method => "post"}
          .row
            %label.label Name
            %input.input{:type => "text", :name => "name"}
          .row
            %label.label Email
            %input.input{:type => "text", :name => "email"}
          .row
            %label.label Password
            %input.input{:type => "password", :name => "password"}
          .row
            %label.label{:style => "font-size: 1em"} Repeat Password
            %input.input{:type => "password", :name => "password2"}
          .row.tr
            %input.awesome.black.large{:style => "width: 150px", :type => "submit", :value => "Create Account"}

